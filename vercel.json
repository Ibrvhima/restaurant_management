{
  "version": 2,
  "builds": [
    {
      "src": "manage.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.13",
        "serverCommand": "gunicorn core.wsgi:application --bind 0.0.0.0:$PORT"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/admin/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "core.settings.production"
  },
  "build": {
    "env": {
      "PYTHONPATH": "$PYTHONPATH:/appdjango"
    }
  }
}
